<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/corners"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp"
            android:layout_marginHorizontal="10dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="43dp"
                android:layout_height="54dp"
                android:src="@drawable/baseline_propane_tank_gray" />

            <TextView
                android:id="@+id/iot"
                android:contentDescription="iot"
                android:layout_width="wrap_content"
                android:layout_weight="@integer/material_motion_duration_medium_1"
                android:layout_height="48dp"
                android:layout_marginHorizontal="5dp"
                android:layout_gravity="center"
                android:backgroundTint="#ff1976d2"
                android:padding="5dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="@integer/material_motion_duration_medium_1"
                android:progressDrawable="@drawable/custom_progress_bg"
                android:progressTint="#2196F3" />

            <TextView
                android:id="@+id/usedGasProgress"
                android:textColor="#000000"
                android:text="剩餘用量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/progress_text"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/material_motion_duration_medium_1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textStyle="bold" />

            <TextView
                android:textColor="#BFD6FA"
                android:text="剩餘用量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
